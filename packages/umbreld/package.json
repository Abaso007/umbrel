{
	"name": "umbreld",
	"type": "module",
	"version": "0.0.1",
	"main": "./source/index.ts",
	"bin": "./source/cli.ts",
	"license": "PolyForm Noncommercial License 1.0.0",
	"private": true,
	"scripts": {
		"start": "umbreld",
		"prettier": "prettier --ignore-path .gitignore",
		"format": "npm run prettier -- --write .",
		"format:check": "npm run prettier -- --check .",
		"lint": "xo",
		"typecheck": "tsc --noEmit",
		"typecheck:ci": "npm run typecheck || true",
		"test": "vitest",
		"test:unit": "npm run test -- unit",
		"test:integration": "npm run test -- integration",
		"test:coverage": "open ./coverage/index.html",
		"test-everything": "npm run format && npm run test -- --run && npm run lint",
		"watch": "nodemon --ext js,json,ts --ignore data --ignore coverage --ignore build --ignore release --exec npm run",
		"dev": "npm run watch -- start -- -- --data-directory ./data --port 3000 --log-level verbose",
		"build": "ts-node scripts/build.ts",
		"prepare-release": "ts-node scripts/prepare-release.ts",
		"timestamp-release": "ots-cli.js stamp release/SHA256SUMS",
		"generate-release-notes": "ts-node scripts/generate-release-notes.ts",
		"todo": "git grep --line-number TODO -- ':!package.json'"
	},
	"prettier": {
		"printWidth": 120,
		"semi": false,
		"useTabs": true,
		"trailingComma": "all",
		"singleQuote": true,
		"bracketSpacing": false
	},
	"xo": {
		"prettier": true,
		"rules": {
			"unicorn/no-array-push-push": "off",
			"unicorn/prefer-type-error": "off",
			"unicorn/better-regex": "off",
			"no-warning-comments": "off",
			"no-await-in-loop": "off",
			"@typescript-eslint/no-floating-promises": "off",
			"@typescript-eslint/no-unsafe-assignment": "off",
			"@typescript-eslint/no-unsafe-call": "off",
			"@typescript-eslint/no-confusing-void-expression": "off",
			"@typescript-eslint/no-unsafe-return": "off",
			"@typescript-eslint/restrict-template-expressions": "off",
			"@typescript-eslint/no-implicit-any-catch": "off",
			"@typescript-eslint/restrict-plus-operands": "off",
			"@typescript-eslint/naming-convention": "off",
			"@typescript-eslint/promise-function-async": "off",
			"@typescript-eslint/no-empty-function": "off",
			"@typescript-eslint/return-await": "off",
			"@typescript-eslint/default-param-last": "off",
			"@typescript-eslint/no-unnecessary-boolean-literal-compare": "off",
			"n/file-extension-in-import": "off"
		}
	},
	"devDependencies": {
		"@types/bcryptjs": "^2.4.2",
		"@types/cors": "^2.8.13",
		"@types/express": "^4.17.17",
		"@types/fs-extra": "^11.0.1",
		"@types/js-yaml": "^4.0.5",
		"@types/ms": "^0.7.31",
		"@types/notp": "^2.0.2",
		"@vitest/coverage-v8": "^0.33.0",
		"caxa": "^3.0.1",
		"compose-spec-schema": "^1.0.0",
		"got": "^13.0.0",
		"nodemon": "^2.0.20",
		"opentimestamps": "^0.4.9",
		"prettier": "^2.8.1",
		"vitest": "^0.33.0",
		"xo": "^0.53.1"
	},
	"dependencies": {
		"@trpc/client": "^10.34.0",
		"@trpc/server": "^10.34.0",
		"arg": "^5.0.2",
		"bcryptjs": "^2.4.3",
		"camelcase-keys": "^8.0.2",
		"chalk-template": "^0.5.0",
		"check-disk-space": "^3.4.0",
		"dot-prop": "^7.2.0",
		"drivelist": "^11.1.0",
		"execa": "^7.1.1",
		"express": "^4.18.2",
		"express-async-handler": "^1.2.0",
		"express-jwt": "^8.4.1",
		"express-session": "^1.17.3",
		"fs-extra": "^11.1.1",
		"globby": "^13.2.1",
		"js-yaml": "^4.1.0",
		"jsonwebtoken": "^9.0.1",
		"ms": "^2.1.3",
		"notp": "^2.0.3",
		"ow": "^1.1.1",
		"p-queue": "^7.3.0",
		"p-retry": "^5.1.2",
		"pify": "^6.1.0",
		"read-pkg-up": "^9.1.0",
		"session-file-store": "^1.5.0",
		"systeminformation": "^5.18.6",
		"thirty-two": "^1.0.2",
		"ts-node": "^10.9.1",
		"typescript": "^5.1.6",
		"zod": "^3.21.4"
	}
}
